void JustA_GININ_TryToSolve()
{
    ll n ;cin>>n;
    vector<ll> ar(n);
    vector<ll>ans(n);
    for (ll i=0 ;i<n;i++)
    {
        cin>>ar[i];
    }
    sort(ar.begin(),ar.end());
    ans[0]=ar[0];
    ll c=ar[0],j=1;
 //   cout<<c<<" ";el;
    for (ll i=1;i<n;i++)
    {
        if(ar[i]>=c)
        {
         //  cout<<ar[i]<<" "<<c;el;
            ans[j]=ar[i];
            j++;
            c+=ar[i];
        }
    }
    cout<<j;
}
int main()
